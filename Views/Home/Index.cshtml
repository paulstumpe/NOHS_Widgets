@using Widgets.Data.Models
@model IEnumerable<Widget>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <div class="container">
        <h2>Our Images</h2>
        <div id="carouselWidgets" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                @{
                    int i = 0;
                }
                @foreach (var widget in Model)
                {
                    <li data-target="#carouselWidgets" data-slide-to="@(i)" class="@(i == 0 ? "active" : "")"></li>
                    { i++; }
                }
            </ol>
            <div class="carousel-inner">
                @{ int j = 0;}
                @foreach (var widget in Model)
                {
                   <div class="carousel-item @(j == 0 ? "active" : "")">
                        <img class="d-block w-100" src="@widget.WidgetImage">
                        <div class="carousel-caption d-none d-md-block">
                            <h4 style="margin-bottom:50px;">@(widget.WidgetName)</h4>
                            <h6>Quantity: @(widget.Qty)</h6>
                        </div>
                    </div>
                    {j++;}
                }
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselWidgets" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselWidgets" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
